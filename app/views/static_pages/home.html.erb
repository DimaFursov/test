<% provide(:title, "Home") %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>      
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
      <section >
        <div class="field">
        <%= form_for(@project) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
          <div class="field">
          <%= f.text_area :project_name, placeholder: "+ add Project" %>
          </div>
        <%= f.submit "+ add TODO List", class: "btn btn-primary" %>
        <% end %>
      </section>  
    </aside>
    <div>
      <h3>Projects (<%= @user.projects.count %>)</h3>
      <div class="field"> 
        <h1> Simple todo list </h1>
        <h3> From ruby garage </h3> 
        <%= render 'shared/feedprojects' %>
      </div>
    </div>  
    <div class="col-md-8">
      <h3>Micropost feed(lenta)</h3>
      <%= render 'shared/feed' %>    
    </div>    
  </div>
<% else %>

<div class="center jumbotron">
</h1>
  <h2>
    <img alt="Rails logo" src="/assets/Ruby.svg" id="img3" />
    This is the home page for the
    <a href="http://www.railstutorial.org/">Ruby on Rails Tutorial</a>
    sample application.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("Ruby.svg", id: "img2", alt: "Ruby on Rails"),
            'http://rubyonrails.org/', id: "img2" %>
<%= link_to 'User', users_path, class: "btn btn-lg btn-primary" %> |
<%= link_to 'about', about_path, class: "btn btn-lg btn-primary" %> |
<%= link_to 'help', help_path, class: "btn btn-lg btn-primary" %> |
<%= link_to 'contact', contact_path, class: "btn btn-lg btn-primary" %>
<% end %>